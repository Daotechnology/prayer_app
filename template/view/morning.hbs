<!DOCTYPE html>
<html lang="en">

{{>index_head}}

<body>
    <!-- tap on top starts-->
    <div class="tap-top"><i data-feather="chevrons-up"></i></div>
    <!-- tap on tap ends-->
    <!-- Loader starts-->
    <div class="loader-wrapper">
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"></div>
        <div class="dot"> </div>
        <div class="dot"></div>
    </div>
    <!-- Loader ends-->
    <!-- page-wrapper Start-->
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <!-- Page Header Start-->
        {{>page_header}}
        <!-- Page Header Ends-->
        <!-- Page Body Start-->
        <div class="page-body-wrapper">
            <!-- Page Sidebar Start-->
            {{>sidebar}}
            <!-- Page Sidebar Ends-->
            <div class="page-body">
                <div class="container-fluid">
                    <div class="page-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h3>Opening Prayer</h3>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/dashboard"> <i data-feather="home"></i></a>
                                    </li>
                                    <li class="breadcrumb-item">Users</li>
                                    <li class="breadcrumb-item active"> Opening Prayer</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Container-fluid starts-->
                <div class="container-fluid">
                    <div class="edit-profile">
                        <div class="row">
                           <div class="col-xl-4 col-lg-5">
                                <form class="card">
                                    <div class="card-header pb-0">
                                        <h4 class="card-title mb-0">Add Prayer</h4>
                                        <div class="card-options"><a class="card-options-collapse" href="#"
                                                data-bs-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a><a
                                                class="card-options-remove" href="#" data-bs-toggle="card-remove"><i
                                                    class="fe fe-x"></i></a></div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="mb-3">
                                                    <label class="form-label f-w-500">Title</label>
                                                    <input class="form-control" id = "title" type="text" placeholder="Season of Ephiphany">
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div>
                                                    <label class="form-label f-w-500">Prayer</label>
                                                    <textarea id = "prayers" class="form-control prayers" rows="5"
                                                        placeholder="Enter Prayer For Today">Hello World</textarea>
                                                </div>
                                            </div>
                                          <div>

                                            <div class = "dynamic_scripture">                                               
                                            
                                            </div>

                                            <div class="col-md-12 mt-2">
                                                <div class="mb-3">
                                                    <label class="form-label f-w-500">Scripture Verse</label>
                                                    <input class="form-control" id = "verse" value ="romans2:3" type="text" placeholder="Isaih 6:7">
                                                </div>
                                            </div>

                                            <div class="col-md-12">
                                                <div>
                                                    <label class="form-label f-w-500">Scripture</label>
                                                    <textarea  id ="scripture" class="form-control" rows="5"
                                                        placeholder="Enter Scripture"></textarea>
                                                </div>
                                            </div>

                                            
                                            <div class = "text-end">
                                                <button class="btn btn-primary btn-sm mt-2 add" type="submit">Add <span class = "text-white">++</span></button>
                                            </div>
                                          </div>   
                                        </div>
                                    </div>
                                    <div class="card-footer text-center">
                                        <button class="btn btn-primary" id = "btn_prayer">Submit Prayer </button>
                                    </div>
                                </form>
                            </div> 
                            <div class="col-xl-8 col-lg-7">
                                <div class="card">
                                    <div class="card-header pb-0">
                                        {{!-- <h4 class="card-title mb-0">Opening Prayer</h4> --}}
                                        <div class="card-options"><a class="card-options-collapse" href="#"
                                                data-bs-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a><a
                                                class="card-options-remove" href="#" data-bs-toggle="card-remove"><i
                                                    class="fe fe-x"></i></a></div>
                                    </div>
                                    <!-- Zero Configuration  Starts-->
                                    <div class="card">
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="display" id="basic-1">
                                                        <thead>
                                                            <tr>
                                                                <th> Title </th>
                                                                <th> Prayer </th>
                                                                <th> Type </th>
                                                                <th> Action </th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {{#each prayer}}
                                                            <tr>
                                                                <td>{{this.title}}</td>
                                                                <td>{{this.prayers}}</td>
                                                                <td>{{this.type}}</td>
                                                                <td>
                                                                    <ul class="action">
                                                                        <li class="edit"> <a href="#"><i
                                                                                    class="icon-pencil-alt"></i></a>
                                                                        </li>
                                                                        <li class="delete"><a href="#"><i
                                                                                    class="icon-trash"></i></a></li>
                                                                    </ul>
                                                                </td>
                                                            </tr>
                                                            {{/each}}
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    <!-- Zero Configuration  Ends -->
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <!-- Container-fluid Ends-->
            </div>
            <!-- footer start-->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 p-0 footer-left">
                            <p class="mb-0">Copyright Â© 2023 Tivo. All rights reserved.</p>
                        </div>
                        <div class="col-md-6 p-0 footer-right">
                            <p class="mb-0">Hand-crafted & made with <i class="fa fa-heart font-danger"></i></p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <div class="token d-none">{{token}}</div>
    <div class="type">{{type}}</div>
    {{!-- Cutom Account --}}
    <script src="../assets/js/custom/morning.js"></script>
    <!-- latest jquery-->
    <script src="../assets/js/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap js-->
    <script src="../assets/js/bootstrap/bootstrap.bundle.min.js"></script>
    <!-- feather icon js-->
    <script src="../assets/js/icons/feather-icon/feather.min.js"></script>
    <script src="../assets/js/icons/feather-icon/feather-icon.js"></script>
    <!-- scrollbar js-->
    <script src="../assets/js/scrollbar/simplebar.js"></script>
    <script src="../assets/js/scrollbar/custom.js"></script>
    <!-- Sidebar jquery-->
    <script src="../assets/js/config.js"></script>
    <script src="../assets/js/sidebar-menu.js"></script>
    <script src="../assets/js/datatable/datatables/jquery.dataTables.min.js"></script>
    <script src="../assets/js/datatable/datatables/datatable.custom.js"></script>
    <!-- Template js-->
    <script src="../assets/js/script.js"></script>
    <script src="../assets/js/theme-customizer/customizer.js">  </script>
    <!-- login js-->
</body>

</html>